<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- view background color -->
    <solid android:color="@color/feed_item_bg" >
    </solid>

    <!-- view border color and width, android:width="@dimen/feed_item_border_width" -->
    <stroke        
        android:dashWidth="@dimen/feed_item_border_width"        
        android:color="@color/feed_item_border" >
    </stroke>

    <!-- Here is the corner radius  <corners android:radius="@dimen/feed_item_corner_radius" >-->
   
        <corners
                android:bottomLeftRadius="@dimen/feed_item_corner_radius"
                android:bottomRightRadius="@dimen/feed_item_corner_radius">
    </corners>
	
</shape>